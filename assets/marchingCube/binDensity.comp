#version 460 core
#extension GL_ARB_compute_shader : enable

layout(local_size_x = 128, local_size_y = 1, local_size_z = 1) in;

layout(location = 0, r32ui) uniform restrict uimage3D densityField;
uniform float size;
uniform int numItems;
uniform int res;

struct Particle {
    vec3 position;
    vec3 velocity;
    float density;
    float pressure;
};

layout(std430, binding = 1) restrict readonly buffer Particles {
    Particle particles[];
};

ivec3 pointToBinCoord(vec3 p) {
    return ivec3((p / size) * ivec3(res));
}

void main() {
    const uint particleID = gl_GlobalInvocationID.x;
    if (particleID >= numItems) {
        return;
    }

    const Particle p = particles[particleID];
    const ivec3 binCoord = pointToBinCoord(p.position);

    imageAtomicAdd(densityField, binCoord, floatBitsToUint(p.density));
}
